configMessages()
{
    verbose "show current 1 " 1;
    verbose "set session var 2 " 1;
    verbose "open config 3 "     1;
}

loop=true;
verbose 'type quit to go back' 0 $verbosity
while [ "$loop" == "true" ] 
    do

    configMessages;

    read -p 'choose session action : (int)' action

    if [ "$action" = "3" ]; then
        nano ${config[baseConfigFile]};
    fi

    if [ "$action" = "2" ]; then
        handleSection 'configcommands' 'write-var';
        echo afterwrite
    fi

    if [ "$action" = "1" ]; then
        handleSection 'configcommands' 'show-default';
    fi

    if [ "$action" == "quit" ]; then
        unset loop;
    fi

done